<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Display name</th>
    <th>File path</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.display_name %></td>
    <td><%= task.file_path %></td>
    <td><%= task.active %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

