<h1>Listing tasks</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Display Name</th>
    <th>File Path</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.display_name %></td>
    <td><%= task.file_path %></td>
    <td><%= active_flag_display(task.active) %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

