<%= form_for(@suite) do |f| %>
  <% if @suite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@suite.errors.count, "error") %> prohibited this suite from being saved:</h2>

      <ul>
      <% @suite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :build_date %><br />
    <%= f.text_field :build_date %>
  </div>
  <div class="field">
    <%= f.label :build_time %><br />
    <%= f.text_field :build_time %>
  </div>
  <div class="field">
    <%= f.label :runstamp %><br />
    <%= f.datetime_select :runstamp, :start_year => Time.now.year - 10, :end_year => Time.now.year %>
  </div>
  <div class="field">
    <%= f.label :duration %><br />
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :duration_converted %><br />
    <%= f.text_field :duration_converted %>
  </div>
  <div class="field">
    <%= f.label :mobilizer_build_tag %><br />
    <%= f.text_field :mobilizer_build_tag %>
  </div>
  <div class="field">
    <%= label_tag "Exclude" %>
    <%= f.check_box :exclude %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
