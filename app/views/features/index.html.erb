<h1>Listing the features for <%= @current_suite.name %> from <%= @current_suite.build_date + "_" + @current_suite.build_time %></h1>

<table>
  <tr>
    <th>Keyword</th>
    <th>Name</th>
    <th>Duration</th>
    <th>Duration converted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @features.each do |feature| %>
  <tr>
    <td><%= feature.keyword %></td>
    <td><%= feature.name %></td>
    <td><%= feature.duration %></td>
    <td><%= feature.duration_converted %></td>
    <td><%= link_to 'Show', feature %></td>
    <td><%= link_to 'Edit', edit_feature_path(feature) %></td>
    <td><%= link_to 'Destroy', feature, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feature', new_suite_feature_path(@current_suite) %>
