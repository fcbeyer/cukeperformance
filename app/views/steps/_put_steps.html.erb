<table id="scenarioSteps" class="table">
  <tr>
    <th>Name</th>
    <th>Duration</th>
    <th>Status</th>
  </tr>

<% @current_scenario.steps.each do |step| %>
  <tr>
  	<% if step.name.length == 0
  		displayName = step.keyword
  	   else
  	   	displayName = step.name
  	   end %>  	
    <td><%= link_to displayName, [@current_suite,@current_feature,@current_scenario,step] %></td>
    <td><%= step.duration_converted %></td>
    <% if step.status == "failed" %>
    	<td><span class="label label-important"><%= step.status %></span></td>
    <% elsif step.status == "skipped" %>
    	<td><span class="label label-info"><%= step.status %></span></td>
    <% else %>
    	<td><span class="label label-success"><%= step.status %></span></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Step', new_suite_feature_scenario_step_path(@current_suite,@current_feature,@current_scenario) %>
