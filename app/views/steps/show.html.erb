	<p><b>Status:</b><span class="label label-important">
<% elsif @step.status == "skipped" %>
	<p><b>Status:</b><span class="label label-info">
<% else %>
	<p><b>Status:</b><span class="label label-success">
<% end %>
  <%= @step.status %>
</span></p>

<p>
  <b>Scenario:</b>
  <%= @step.scenario_id %>
</p>


