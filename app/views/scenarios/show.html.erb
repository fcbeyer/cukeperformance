<p id="notice"><%= notice %></p>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<ul class="breadcrumb">
			  <li><%= link_to @current_suite.name, get_tab_path(suites_path,@current_suite.name) %><span class="divider">/</span></li>
			  <li><%= link_to time_tag(@current_suite.runstamp,:format=>'%B %d, %Y %l:%M %p'), [@current_suite] %><span class="divider">/</span></li>
			  <li><%= link_to @current_feature.name,[@current_suite,@current_feature] %><span class="divider">/</span></li>
			  <li class="active"><%= keyword_or_name_link(@current_scenario) %><span class="divider">/</span></li>
			</ul>
			<table class="table table-bordered table-hover">
			  <tr>
			    <th>Scenario</th>
			    <th>Duration</th>
			    <th></th>
			  </tr>
			  <tr>
			  	<td><%= link_to keyword_or_name_link(@current_scenario), [@current_suite,@current_feature], :class => "cuke_results" %></td>
			    <td><%= @current_scenario.duration_converted %></td>
			    <td><%= link_to 'Destroy', [@current_suite,@current_feature,@current_scenario], confirm: 'Are you sure?', method: :delete, :class => "btn btn-small" %></td>
			  </tr>
			</table>
			<div class="container-fluid">
				<div class="row-fluid">
					<div class="span12">
						<%= render 'steps/put_steps' %>
					</div>
				</div>
			</div>
			<!-- <%= link_to 'Back', [@current_suite,@current_feature], :class => "btn btn-small" %> -->
		</div>
	</div>
</div>