<h1>Listing the scenarios for <%= @current_feature.name %> from the <%= @current_suite.name %> build on <%= @current_suite.build_date + "_" + @current_suite.build_time %></h1>

<table>
  <tr>
    <th>Name</th>
    <th>Duration</th>
    <th>Duration converted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scenarios.each do |scenario| %>
  <tr>
  	<% if scenario.name.length == 0
  		displayName = scenario.keyword
  	   else
  	   	displayName = scenario.name
  	   end %>
    <td><%= displayName %></td>
    <td><%= scenario.duration %></td>
    <td><%= scenario.duration_converted %></td>
    <td><%= link_to 'Show', [@current_suite,@current_feature,scenario] %></td>
    <td><%= link_to 'Edit', edit_suite_feature_scenario_path(@current_suite,@current_feature,scenario) %></td>
    <td><%= link_to 'Destroy', [@current_suite,@current_feature,scenario], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Scenario', new_suite_feature_scenario_path(@current_suite,@current_feature) %>
