<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h3 id="myModalLabel">BVT Data Retrieval Form</h3>
</div>
<div class="modal-body">
	<%=form_tag do %>
		<fieldset>
			<div class="field">
			    <%= label_tag :feature_name, "Feature Name:" %>
			    <%= text_field_tag :feature_name, params[:feature_name] %>
			</div>
			<div class="field">
			    <%= label_tag :begin_date, "Begin Date: " %>
			    <%= date_select :begin_date, :start_year => Time.now.year - 10, :end_year => Time.now.year %>
			</div>
			<div class="field">
			    <%= label_tag :end_date, "End Date: " %>
			    <%= date_select :end_date, :start_year => Time.now.year - 10, :end_year => Time.now.year %>
			</div>
		</fieldset>
	<% end %>
</div>
<div class="modal-footer">
  <button class="btn btn-mini btn-success" data-dismiss="modal" onclick="getData('BVT','Scenarios')" type="button">Fetch</button>
  <button class="btn btn-mini btn-danger" data-dismiss="modal" aria-hidden="true">Close</button>
</div>
