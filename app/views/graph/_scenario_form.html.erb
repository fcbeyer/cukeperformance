<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h3 id="myModalLabel">BVT Data Retrieval Form</h3>
</div>
<div class="modal-body">
	<%= form_tag 'none', :id => 'bvtScenarioData' do %>
		<fieldset>
			<div class="field">
			    <%= label_tag :f_name, "Feature Name:" %>
			    <%= text_field_tag :f_name %>
			</div>
			<div class="field">
			    <%= label_tag :begin_date, "Begin Date: " %>
			    <%= select_date(Time.now.year - 10, :prefix => "begin_date")%>
			</div>
			<div class="field">
			    <%= label_tag :end_date, "End Date: " %>
			    <%= select_date(Time.now, :prefix => "end_date")%>
			</div>
		</fieldset>
	<% end %>
</div>
<div class="modal-footer">
  <button class="btn btn-mini btn-success" data-dismiss="modal" onclick="getData('BVT','Scenarios')" type="button">Fetch</button>
  <button class="btn btn-mini btn-danger" data-dismiss="modal" aria-hidden="true">Close</button>
</div>
